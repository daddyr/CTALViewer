<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/train_list_item"
    android:layout_marginBottom="4dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:background="@color/colorPrimary"/>
    <TextView
        android:id="@+id/textViewLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Green Line To"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harlem/Lake"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLine"
        app:layout_constraintLeft_toLeftOf="@+id/textViewLine"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/label_minutes"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTime"
        android:layout_marginBottom="2dp"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5"
        app:layout_constraintRight_toLeftOf="@+id/textViewMin"
        android:layout_marginRight="4dp"
        android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>